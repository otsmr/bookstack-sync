{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./build",
    "moduleResolution": "node",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": [
    "./src/main.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}